<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_window_info_border"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/window_info_title"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/window_info_content_before_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/window_info_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/default_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/window_info_text_after_image"
        android:textColor="#000000"
        />

</LinearLayout>